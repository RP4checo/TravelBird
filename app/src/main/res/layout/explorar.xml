<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame3"
    android:orientation="vertical">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp"
          android:background="@drawable/frame1"
          android:clipToPadding="false"
          android:gravity="left|center_vertical"
          android:orientation="horizontal"
          android:paddingBottom="12dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="12dp">

        <ImageView
            android:id="@+id/lupa_destino"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_lupa" />

        <TextView
            android:id="@+id/text_buscar_destino"
            android:layout_width="290dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="¿Cuál será tu próximo destino?"
            android:textColor="#FFABA6B0"
            android:textSize="16dp" />
      </LinearLayout>

      <TextView
          android:id="@+id/text_explorar_destinos"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="11.5dp"
          android:gravity="left|top"
          android:includeFontPadding="false"
          android:lineHeight="27.5dp"
          android:text="Explorar Destinos"
          android:textColor="#FFFFFFFF"
          android:textSize="22dp"
          android:textStyle="bold" />

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal" >


        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame1"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_paris" />

          <TextView
              android:id="@+id/text_paris"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="París"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame2"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_tokio" />

          <TextView
              android:id="@+id/text_tokio"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Tokio"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="249dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame3"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_londres" />

          <TextView
              android:id="@+id/text_londres"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Londres"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="249dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame4"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_ny" />

          <TextView
              android:id="@+id/text_nueva_york"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Nueva York"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="482dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame5"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_la" />

          <TextView
              android:id="@+id/text_los_angeles"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Los Angeles"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="482dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame6"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_san_fran" />

          <TextView
              android:id="@+id/text_san_francisco"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="San Francisco"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="714.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame7"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_barcelona" />

          <TextView
              android:id="@+id/text_barcelona"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Barcelona"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="221dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="716.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/image_depth_frame8"
              android:layout_width="173dp"
              android:layout_height="173dp"
              android:scaleType="centerInside"
              android:src="@drawable/pic_roma" />

          <TextView
              android:id="@+id/text_roma"
              android:layout_width="173dp"
              android:layout_height="36dp"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp"
              android:gravity="left|top"
              android:includeFontPadding="false"
              android:lineHeight="24dp"
              android:text="Roma"
              android:textColor="#FFFFFFFF"
              android:textSize="16dp" />
        </LinearLayout>
      </FrameLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="72dp"
          android:background="@drawable/frame5"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingHorizontal="16dp">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/container_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:scaleType="centerInside"
              android:src="@drawable/icon_home_empty" />

          <TextView
              android:id="@+id/text_inicio"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="Inicio"
              android:textColor="#FFABA6B0"
              android:textSize="12dp" />

        </LinearLayout>

        <!-- Explorar -->
        <LinearLayout
            android:id="@+id/container_explorer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="48dp"
              android:layout_height="32dp"
              android:background="@drawable/frame8"
              android:gravity="center"
              android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_explorar_selected" />

          </LinearLayout>

          <TextView
              android:id="@+id/text_explorar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="Explorar"
              android:textColor="#FFFFFFFF"
              android:textSize="12dp" />

        </LinearLayout>

        <!-- Itinerario -->
        <LinearLayout
            android:id="@+id/container_itinerario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:scaleType="centerInside"
              android:src="@drawable/icon_itinerario" />

          <TextView
              android:id="@+id/text_itinerairo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="Itinerairo"
              android:textColor="#FFABA6B0"
              android:textSize="12dp" />

        </LinearLayout>

        <!-- Cuenta -->
        <LinearLayout
            android:id="@+id/container_cuenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:scaleType="centerInside"
              android:src="@drawable/icon_cuenta" />

          <TextView
              android:id="@+id/text_cuenta"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="Cuenta"
              android:textColor="#FFABA6B0"
              android:textSize="12dp" />

        </LinearLayout>

      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>